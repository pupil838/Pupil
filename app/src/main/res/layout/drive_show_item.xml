<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linLayout1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/companyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="16sp"
            android:text="Company Name"
            android:textColor="@color/black"
            android:maxLength="50"
            android:maxLines="2"
            android:ellipsize="end"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linLayout2"
            android:background="@drawable/border"
            android:layout_margin="3dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linLayout3"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salary Package"
                    android:textColor="@color/textColor"
                    android:textSize="14sp"
                    android:paddingLeft="5dp"/>

                <TextView
                    android:id="@+id/salaryPackage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="show Package"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingLeft="5dp"/>


            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linLayout4"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Standing Area"
                    android:textColor="@color/textColor"
                    android:textSize="14sp"
                    android:paddingLeft="5dp"/>

                <TextView
                    android:id="@+id/standingArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="show Repear"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingLeft="5dp"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linLayout5"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Job Location"
                    android:textColor="@color/textColor"
                    android:textSize="14sp"
                    android:paddingLeft="5dp"/>

                <TextView
                    android:id="@+id/job_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="show Package"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:paddingLeft="5dp"/>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linLayout6"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="16sp"
                android:text="Job Profile"
                android:textColor="@color/textColor"/>

            <TextView
                android:id="@+id/jobProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:textSize="16sp"
                android:text="Job Profile"
                android:textColor="@color/black"
                android:maxLength="40"
                android:maxLines="2"
                android:ellipsize="end"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linLayout7"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:textSize="14sp"
                    android:text="Drive Date-:"
                    android:textColor="@color/textColor"/>

                <TextView
                    android:id="@+id/Drive_Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:textSize="14sp"
                    android:text="Job Profile"
                    android:textColor="@color/black"
                    android:maxLength="20"
                    android:maxLines="2"
                    android:ellipsize="end"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:textSize="16sp"
                    android:text=" | Joining Date-:"
                    android:textColor="@color/textColor"/>

                <TextView
                    android:id="@+id/Joining_Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:textSize="14sp"
                    android:text="Joining Date"
                    android:textColor="@color/black"
                    android:maxLength="20"
                    android:maxLines="2"
                    android:ellipsize="end"/>

            </LinearLayout>


        <TextView
            android:id="@+id/click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click Me"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_gravity="end|bottom"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

</android.support.v7.widget.CardView>