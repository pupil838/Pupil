<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:id="@+id/toolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Categories"
            android:textSize="24sp"
            android:textColor="@color/white"/>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linLayout1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/childLinLayout1"
                android:orientation="horizontal"
                android:padding="5dp">

                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:background="@color/black"
                    android:layout_margin="2dp">

                    <ImageView
                        android:id="@+id/category_english"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/english_trend_quest" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:background="@color/black"
                    android:layout_margin="2dp">

                    <ImageView
                        android:id="@+id/category_quant"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/quant_trend_quest" />

                </RelativeLayout>

            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/secondChildLinLayout1"
            android:orientation="horizontal"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:background="@color/black"
                android:layout_margin="2dp">

                <ImageView
                    android:id="@+id/category_logical"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/logical_trend_quest" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:background="@color/black"
                android:layout_margin="2dp">

                <ImageView
                    android:id="@+id/category_ampi"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ampi_trend_quest" />

            </RelativeLayout>


        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/thirdChildLinLayout1"
                android:orientation="horizontal"
                android:padding="5dp">

                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:background="@color/black"
                    android:layout_margin="2dp">

                    <ImageView
                        android:id="@+id/category_info"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/info_trend_quest" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:background="@color/black"
                    android:layout_margin="2dp">

                    <ImageView
                        android:id="@+id/category_compProg"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:src="@drawable/compprog_trend_quest" />

                </RelativeLayout>


            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fourthChildLinLayout1"
            android:orientation="horizontal"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:background="@color/black"
                android:layout_margin="2dp">

                <ImageView
                    android:id="@+id/category_compSci"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/compsci_trend_quest" />

            </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>